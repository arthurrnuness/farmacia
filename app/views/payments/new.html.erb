<div class="payment-container" style="max-width: 600px; margin: 50px auto; padding: 20px;">
  <h1>Upgrade to Premium</h1>

  <div class="pricing-card" style="border: 1px solid #ddd; border-radius: 8px; padding: 30px; margin: 20px 0; text-align: center;">
    <h2>Premium Subscription</h2>
    <div style="font-size: 48px; margin: 20px 0;">
      <span style="font-size: 24px;">R$</span>29.99
    </div>

    <ul style="text-align: left; list-style: none; padding: 0; margin: 30px 0;">
      <li style="margin: 10px 0;">✓ Unlimited habit tracking</li>
      <li style="margin: 10px 0;">✓ Advanced analytics</li>
      <li style="margin: 10px 0;">✓ Custom tags and categories</li>
      <li style="margin: 10px 0;">✓ Priority support</li>
      <li style="margin: 10px 0;">✓ No ads</li>
    </ul>

    <%= form_with url: create_checkout_session_path, method: :post, data: { turbo: false } do |form| %>
      <%= form.submit "Subscribe Now",
          style: "background-color: #5469d4; color: white; padding: 12px 40px; border: none; border-radius: 4px; font-size: 16px; cursor: pointer; width: 100%;" %>
    <% end %>
  </div>

  <div style="text-align: center; margin-top: 20px; color: #666;">
    <p>Secure payment powered by Stripe</p>
    <%= link_to "← Back to Dashboard", dashboard_path %>
  </div>
</div>

<% if params[:payment] == 'cancelled' %>
  <div style="background-color: #f8d7da; color: #721c24; padding: 10px; border-radius: 4px; margin: 20px auto; max-width: 600px;">
    Payment was cancelled. You can try again when you're ready.
  </div>
<% end %>
