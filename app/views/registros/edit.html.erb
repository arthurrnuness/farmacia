<!-- app/views/registros/edit.html.erb -->
<div class="modal-overlay" onclick="history.back()">
  <div class="modal-content" onclick="event.stopPropagation()">
    <div class="modal-header">
      <h2>Editar Registro</h2>
      <button onclick="history.back()" class="btn-close">×</button>
    </div>
    
    <div class="modal-body">
      <p class="registro-info">
        <strong><%= @registro.habito.nome %></strong><br>
        <%= @registro.data.strftime('%d/%m/%Y - %A') %>
      </p>
      
      <%= form_with(model: @registro, local: true) do |form| %>
        <div class="form-group">
          <label class="checkbox-label-grande">
            <%= form.check_box :concluido, class: 'checkbox-grande' %>
            <span>Hábito concluída</span>
          </label>
        </div>
        
        <div class="form-group">
          <%= form.label :observacao, 'Observações / Comentários' %>
          <%= form.text_area :observacao, 
                            rows: 4, 
                            placeholder: 'Adicione suas notas sobre esta atividade...',
                            class: 'form-control' %>
        </div>
        
        <div class="form-actions">
          <%= form.submit 'Salvar', class: 'btn btn-primary' %>
          <%= link_to 'Cancelar', 'javascript:history.back()', class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>